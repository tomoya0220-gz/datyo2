<div id="user">
    <p>Hello, <%= @name %> さん</p>
    <div id="credentials">
        Credentials:
        <ul>
            <li>access_token: <%= @token %></li>
            <li>refresh_token: <%= @refresh_token %></li>
            <li>expires_at: <%= @expires_at %></li>
        </ul>
    </div>
    <div id="userinfo">
        UserInfo:
        <ul>
            <li>user_id:    <%= @user_id %></li>
            <li>email:      <%= @email %></li>
            <li>name:       <%= @name %></li>
            <li>first_name: <%= @first_name %></li>
            <li>last_name:  <%= @last_name %></li>
        </ul>
    </div>
</div>